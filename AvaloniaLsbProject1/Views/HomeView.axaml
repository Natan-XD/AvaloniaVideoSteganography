<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:AvaloniaLsbProject1.ViewModels"
             x:Class="AvaloniaLsbProject1.Views.HomeView"
             x:DataType="vm:MainWindowViewModel">
	<Grid Background="#1E223D">
		<!-- Main Layout -->
		<StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="20">
			<!-- Header Section -->
			<Border Background="#2A2F50" CornerRadius="10" Margin="0,20,0,40" Padding="20">
				<TextBlock Text="Welcome to Video Steganography Tool"
                           FontSize="28"
                           FontWeight="Bold"
                           Foreground="#FFFFFF"
                           HorizontalAlignment="Center"/>
			</Border>

			<!-- Description -->
			<TextBlock Text="Choose an action to get started:"
                       FontSize="18"
                       Foreground="#CCCCCC"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>

			<!-- Action Buttons -->
			<StackPanel Spacing="15">
				<Button Width="300" Height="50"
                        HorizontalAlignment="Center"
                        Content="Embed Message in Video"
                        Background="#5661A6"
                        Foreground="#FFFFFF"
                        FontSize="23"
                        CornerRadius="8"
                        Command="{Binding NavigateToEmbedCommand}">
					<Button.Styles>
						<Style Selector="Button:hover">
							<Setter Property="Background" Value="#7481D4"/>
						</Style>
					</Button.Styles>
				</Button>

				<Button Width="300" Height="50"
                        HorizontalAlignment="Center"
                        Content="Extract Hidden Message"
                        Background="#5661A6"
                        Foreground="#FFFFFF"
                        FontSize="24"
                        CornerRadius="8"
                        Command="{Binding NavigateToExtractCommand}">
					<Button.Styles>
						<Style Selector="Button:hover">
							<Setter Property="Background" Value="#7481D4"/>
						</Style>
					</Button.Styles>
				</Button>

				<Button Width="300" Height="50"
                        HorizontalAlignment="Center"
                        Content="Stream and Play Video" 
                        Background="#5661A6"
                        Foreground="#FFFFFF"
                        FontSize="26"
                        CornerRadius="8"
                        Command="{Binding NavigateToStreamCommand}">
					<Button.Styles>
						<Style Selector="Button:hover">
							<Setter Property="Background" Value="#7481D4"/>
						</Style>
					</Button.Styles>
				</Button>
			</StackPanel>

			<!-- Footer Section -->
			<TextBlock Text="Â© 2025 Video Steganography Tool - All Rights Reserved"
                       FontSize="12"
                       Foreground="#777777"
                       HorizontalAlignment="Center"
                       Margin="0,40,0,0"
					   />
		</StackPanel>
	</Grid>
</UserControl>