<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:AvaloniaLsbProject1.ViewModels"
             x:Class="AvaloniaLsbProject1.Views.EmbedView"
             x:DataType="vm:EmbedViewModel">
	<StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="15" Background="DarkGreen">
		<!-- Title -->
		<TextBlock Text="Embed Message in Video Screen"
                   FontWeight="Bold"
                   FontSize="24"
                   HorizontalAlignment="Center" />

		<!-- Video Selection -->
		<TextBlock Text="Video Path:" FontWeight="Bold" />
		<StackPanel Orientation="Horizontal" Spacing="10">
			<Button Content="Select Video" Command="{Binding SelectVideoCommand}" />
			<TextBox Text="{Binding SelectedVideoPath}"
                     Width="300"
                     IsReadOnly="True"
                     VerticalAlignment="Center" />
		</StackPanel>

		<!-- Video Attributes -->
		<TextBlock Text="Video Attributes:" FontWeight="Bold" Margin="0,10,0,0" />
		<StackPanel Orientation="Vertical" Margin="10" Spacing="5">
			<TextBlock>
				<Run Text="Height: " />
				<Run Text="{Binding Height}" />
			</TextBlock>
			<TextBlock>
				<Run Text="Width: " />
				<Run Text="{Binding Width}" />
			</TextBlock>
			<TextBlock>
				<Run Text="Frame Rate: " />
				<Run Text="{Binding FrameRate}" />
			</TextBlock>
			<TextBlock>
				<Run Text="Bit Rate: " />
				<Run Text="{Binding BitRate}" />
			</TextBlock>
			<TextBlock>
				<Run Text="Duration: " />
				<Run Text="{Binding Duration}" />
			</TextBlock>
		</StackPanel>

		<!-- Text to Encrypt -->
		<TextBlock Text="Enter Text to be Encrypted:" FontWeight="Bold" />
		<TextBox Text="{Binding MessageText}"
                 Width="300"
                 Margin="0,5"
                 Watermark="Enter your secret message" />

		<!-- Password for Encryption -->
		<TextBlock Text="Enter Password for Encryption:" FontWeight="Bold" />
		<TextBox Text="{Binding EncryptionPassword}"
                 Width="300"
                 Margin="0,5"
                 Watermark="Enter a strong password" />

		<!-- New Video Name -->
		<TextBlock Text="Enter New Video Name:" FontWeight="Bold" />
		<TextBox Text="{Binding VideoNameAndFormat}"
                 Width="300"
                 Margin="0,5"
                 Watermark="NewVideo.mp4" />

		<!-- Embed Message Button -->
		<Button Content="Embed Message in Video"
                Command="{Binding EmbeddMessageCommand}"
                Width="250"
                HorizontalAlignment="Center" />

		<!-- Error Messages -->
		<TextBlock Text="Error Messages:" FontWeight="Bold" />
		<TextBox Text="{Binding ErrorMessage}"
                 Width="300"
                 Height="100"
                 IsReadOnly="True"
                 AcceptsReturn="True"
                 Background="LightGray" />

		<!-- Play Video Button -->
		<Button Content="Play Video"
                Command="{Binding PlayVideoCommand}"
                Width="200"
                HorizontalAlignment="Center" />

		<!-- Back Button -->
		<Button Name="BackButton"
                Content="Back to Home"
                Width="200"
                HorizontalAlignment="Center" />
	</StackPanel>
</UserControl>
