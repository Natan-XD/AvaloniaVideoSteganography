<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="AvaloniaLsbProject1.Views.EmbedView"
             xmlns:vm="clr-namespace:AvaloniaLsbProject1.ViewModels"
             x:DataType="vm:EmbedViewModel">
	<StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
		<TextBlock Text="Embed Message in Video Screen" FontWeight="Bold" FontSize="20"/>

		<!-- Video Selection -->
		<TextBlock Text="Video Path:" FontWeight="Bold"/>
		<Button Content="Select Video" Command="{Binding SelectVideoCommand}" />
		<TextBox Text="{Binding SelectedVideoPath}" Width="300" Margin="5" IsReadOnly="True" />

		<!-- Video Attributes -->
		<TextBlock Text="Video Attributes:" FontWeight="Bold" Margin="0,10,0,0" />
		<StackPanel Orientation="Vertical" Margin="10">
			<TextBlock Text="{Binding Height}" />
			<TextBlock Text="{Binding Width}" />
			<TextBlock Text="{Binding FrameRate}" />
			<TextBlock Text="{Binding BitRate}" />
			<TextBlock Text="{Binding Duration}" />
		</StackPanel>

		<!-- Other UI Elements -->
		<TextBlock Text="Enter text to be encrypted" FontWeight="Bold"/>
		<TextBox Text="{Binding MessageText}" Width="300" Margin="5"/>

		<TextBlock Text="Enter password for encryption" FontWeight="Bold"/>
		<TextBox Text="{Binding EncryptionPassword}" Width="300" Margin="5"/>

		<TextBlock Text="Enter New Video Name" FontWeight="Bold"/>
		<TextBox Text="{Binding VideoNameAndFormat}" Width="300" Margin="5"/>

		<Button Content="Embed Message in Video" Command="{Binding EmbeddMessageCommand}" />
		<TextBlock Text="Error Messages" FontWeight="Bold"/>
		<TextBox Text="{Binding ErrorMessage}" Width="300" Height="100" Margin="5" IsReadOnly="True" AcceptsReturn="True"/>
		<Button Content="Play Video" Command="{Binding PlayVideoCommand}" />
		<Button Name="BackButton" Content="Back to Home" />
	</StackPanel>
</UserControl>
