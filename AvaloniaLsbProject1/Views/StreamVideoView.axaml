<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:AvaloniaLsbProject1.ViewModels"
             x:Class="AvaloniaLsbProject1.Views.StreamVideoView"
             x:DataType="vm:StreamVideoViewModel">
	<StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="15" Background="#1E223D">
		<!-- Title -->
		<TextBlock Text="Stream Video Screen" FontWeight="Bold" FontSize="24" Foreground="#FFFFFF" HorizontalAlignment="Center" />

		<!-- Video Selection -->
		<StackPanel Orientation="Horizontal" Spacing="10">
			<Button Content="Select Video" Command="{Binding SelectVideoCommand}" Background="#5661A6" Foreground="#FFFFFF" CornerRadius="8"/>
			<TextBox Text="{Binding SelectedVideoPath}" Width="300" IsReadOnly="True" Background="#2A2F50" Foreground="#FFFFFF" BorderBrush="#7481D4" />
		</StackPanel>

		<!-- Video Attributes -->
		<TextBlock Text="Video Attributes:" FontWeight="Bold" Foreground="#CCCCCC" Margin="0,10,0,0" />
		<StackPanel Orientation="Vertical" Margin="10" Spacing="5">
			<TextBlock Foreground="#FFFFFF">
				<Run Text="Height: " />
				<Run Text="{Binding Height}" />
			</TextBlock>
			<TextBlock Foreground="#FFFFFF">
				<Run Text="Width: " />
				<Run Text="{Binding Width}" />
			</TextBlock>
			<TextBlock Foreground="#FFFFFF">
				<Run Text="Frame Rate: " />
				<Run Text="{Binding FrameRate}" />
			</TextBlock>
			<TextBlock Foreground="#FFFFFF">
				<Run Text="Bit Rate: " />
				<Run Text="{Binding BitRate}" />
			</TextBlock>
			<TextBlock Foreground="#FFFFFF">
				<Run Text="Duration: " />
				<Run Text="{Binding Duration}" />
			</TextBlock>
		</StackPanel>

		<!-- Streaming Options -->
		<TextBlock Text="Streaming Options" FontWeight="Bold" Foreground="#CCCCCC" Margin="0,10,0,0" />
		<TextBlock Text="Enter Multicast IP:" FontWeight="Bold" Foreground="#CCCCCC" />
		<TextBox Text="{Binding MulticastIP}" Width="300" Margin="0,5" Watermark="224.0.0.0" Background="#2A2F50" Foreground="#FFFFFF" BorderBrush="#7481D4" />

		<TextBlock Text="Enter Port:" FontWeight="Bold" Foreground="#CCCCCC" />
		<TextBox Text="{Binding Port}" Width="300" Margin="0,5" Watermark="2000" Background="#2A2F50" Foreground="#FFFFFF" BorderBrush="#7481D4" />

		<Button Content="Start Stream" Command="{Binding StreamVideoCommand}" Width="200" Background="#5661A6" Foreground="#FFFFFF" CornerRadius="8">
			<Button.Styles>
				<Style Selector="Button:hover">
					<Setter Property="Background" Value="#7481D4"/>
				</Style>
			</Button.Styles>
		</Button>

		<!-- Playback Options -->
		<TextBlock Text="Playback Options" FontWeight="Bold" Foreground="#CCCCCC" Margin="20,10,0,0" />
		<Button Content="Play Video from IP" Command="{Binding PlayVideoCommand}" Width="200" Background="#5661A6" Foreground="#FFFFFF" CornerRadius="8">
			<Button.Styles>
				<Style Selector="Button:hover">
					<Setter Property="Background" Value="#7481D4"/>
				</Style>
			</Button.Styles>
		</Button>
		<Button Content="Download Stream" Command="{Binding DownloadStreamCommand}" Width="200" Background="#5661A6" Foreground="#FFFFFF" CornerRadius="8">
			<Button.Styles>
				<Style Selector="Button:hover">
					<Setter Property="Background" Value="#7481D4"/>
				</Style>
			</Button.Styles>
		</Button>

		<!-- Error Messages -->
		<TextBlock Text="Error Messages:" FontWeight="Bold" Foreground="#CCCCCC" Margin="20,10,0,0" />
		<TextBox Text="{Binding ErrorMessage}"
                 Width="300"
                 Height="100"
                 IsReadOnly="True"
                 AcceptsReturn="True"
                 Background="#2A2F50"
                 Foreground="#FFFFFF"
                 BorderBrush="#7481D4" />

		<!-- Back Button -->
		<Button Name="BackButton" Content="Back to Home" Width="200" Background="#5661A6" Foreground="#FFFFFF" CornerRadius="8">
			<Button.Styles>
				<Style Selector="Button:hover">
					<Setter Property="Background" Value="#7481D4"/>
				</Style>
			</Button.Styles>
		</Button>
	</StackPanel>
</UserControl>