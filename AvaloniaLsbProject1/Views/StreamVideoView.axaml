<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:AvaloniaLsbProject1.ViewModels"
             x:Class="AvaloniaLsbProject1.Views.StreamVideoView"
             x:DataType="vm:StreamVideoViewModel">
	<StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="15" Background="DarkGreen">
		<!-- Title -->
		<TextBlock Text="Stream Video Screen" FontWeight="Bold" FontSize="24" HorizontalAlignment="Center" />

		<!-- Video Selection -->
		<StackPanel Orientation="Horizontal" Spacing="10">
			<Button Content="Select Video" Command="{Binding SelectVideoCommand}" />
			<TextBox Text="{Binding SelectedVideoPath}" Width="300" IsReadOnly="True" />
		</StackPanel>

		<!-- Video Attributes -->
		<TextBlock Text="Video Attributes:" FontWeight="Bold" Margin="0,10,0,0" />
		<StackPanel Orientation="Vertical" Margin="10" Spacing="5">
			<TextBlock>
				<Run Text="Height: " />
				<Run Text="{Binding Height}" />
			</TextBlock>
			<TextBlock>
				<Run Text="Width: " />
				<Run Text="{Binding Width}" />
			</TextBlock>
			<TextBlock>
				<Run Text="Frame Rate: " />
				<Run Text="{Binding FrameRate}" />
			</TextBlock>
			<TextBlock>
				<Run Text="Bit Rate: " />
				<Run Text="{Binding BitRate}" />
			</TextBlock>
			<TextBlock>
				<Run Text="Duration: " />
				<Run Text="{Binding Duration}" />
			</TextBlock>
		</StackPanel>

		<!-- Streaming Options -->
		<TextBlock Text="Streaming Options" FontWeight="Bold" Margin="0,10,0,0" />
		<TextBlock Text="Enter Multicast IP:" FontWeight="Bold" />
		<TextBox Text="{Binding MulticastIP}" Width="300" Margin="0,5" Watermark="224.0.0.0" />

		<TextBlock Text="Enter Port:" FontWeight="Bold" />
		<TextBox Text="{Binding Port}" Width="300" Margin="0,5" Watermark="2000" />

		<Button Content="Start Stream" Command="{Binding StreamVideoCommand}" Width="200" />

		<!-- Playback Options -->
		<TextBlock Text="Playback Options" FontWeight="Bold" Margin="20,10,0,0" />
		<Button Content="Play Video from IP" Command="{Binding PlayVideoCommand}" Width="200" />
		<Button Content="Download Stream" Command="{Binding DownloadStreamCommand}" Width="200" />

		<!-- Error Messages -->
		<TextBlock Text="Error Messages:" FontWeight="Bold" Margin="20,10,0,0" />
		<TextBox Text="{Binding ErrorMessage}"
                 Width="300"
                 Height="100"
                 IsReadOnly="True"
                 AcceptsReturn="True"
                 Background="LightGray" />

		<!-- Back Button -->
		<Button Name="BackButton" Content="Back to Home" Width="200" />
	</StackPanel>
</UserControl>
