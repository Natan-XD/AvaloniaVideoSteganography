<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:AvaloniaLsbProject1.Views"
        xmlns:vm="clr-namespace:AvaloniaLsbProject1.ViewModels"
        x:Class="AvaloniaLsbProject1.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Title="Video Steganography"
        Width="800" Height="600">
	<DockPanel Background="GreenYellow" >
		<!-- Top Navigation Bar -->
		<DockPanel DockPanel.Dock="Top" Background="#7481D4">
			<Grid >
				<StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
					<MenuItem Header="Home" Command="{Binding NavigateToHomeCommand}" BorderThickness="3" />
					<MenuItem Header="Embed Message" Command="{Binding NavigateToEmbedCommand}" BorderThickness="3" />
					<MenuItem Header="Extract Message" Command="{Binding NavigateToExtractCommand}"  BorderThickness="3" />
					<MenuItem Header="Stream and Play Video" Command="{Binding NavigateToStreamCommand}"  BorderThickness="3"/>
				</StackPanel>
			</Grid>
		</DockPanel>

		<!-- Main Content Area -->
		<ContentControl x:Name="ContentArea" />
	</DockPanel>
</Window>
